<Window x:Class="SystemMonitorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NeuroFlow - System Monitor" Height="1080" Width="1920"
        WindowStartupLocation="CenterScreen"
        Background="#FF0A0A0F"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="True">

    <Window.Resources>
        <!-- Modern Color Palette -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#0A0A0F"/>
        <SolidColorBrush x:Key="CardBrush" Color="#1A1A2E"/>
        <SolidColorBrush x:Key="GlassBrush" Color="#16213E"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#00D4AA"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#A855F7"/>
        <SolidColorBrush x:Key="WarnBrush" Color="#F59E0B"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#EF4444"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="TextMutedBrush" Color="#6B7280"/>

        <!-- Glassmorphic Card Style -->
        <Style x:Key="GlassCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.1">
                        <GradientStop Color="#FFFFFF" Offset="0"/>
                        <GradientStop Color="#A855F7" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.2">
                        <GradientStop Color="#FFFFFF" Offset="0"/>
                        <GradientStop Color="#A855F7" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="32" ShadowDepth="0" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Hero Metric Style -->
        <Style x:Key="HeroMetric" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI Variable Display"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Metric Label Style -->
        <Style x:Key="MetricLabel" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI Variable"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
        </Style>

        <!-- Breathing Animation -->
        <Storyboard x:Key="BreathingAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.6" To="1.0" Duration="0:0:2" AutoReverse="True"/>
        </Storyboard>

        <!-- Pulse Animation -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" From="1.0" To="1.05" Duration="0:0:1.5" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" From="1.0" To="1.05" Duration="0:0:1.5" AutoReverse="True"/>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="Transparent">
            <Grid Margin="32,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo & Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="32" Height="32" Margin="0,0,16,0">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Color="#00D4AA" Offset="0"/>
                                <GradientStop Color="#A855F7" Offset="1"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="NeuroFlow" FontFamily="Segoe UI Variable Display" FontSize="24" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                    <TextBlock Text="System Monitor" FontFamily="Segoe UI Variable" FontSize="14" FontWeight="Normal" 
                               Foreground="{StaticResource TextMutedBrush}" VerticalAlignment="Center" Margin="16,0,0,0"/>
                </StackPanel>

                <!-- Live Indicator -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,24,0">
                    <Ellipse Width="8" Height="8" Fill="{StaticResource AccentBrush}" x:Name="LiveIndicator">
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Ellipse.Loaded">
                                <BeginStoryboard Storyboard="{StaticResource BreathingAnimation}"/>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                    <TextBlock Text="LIVE" FontFamily="Segoe UI Variable" FontSize="12" FontWeight="Bold" 
                               Foreground="{StaticResource AccentBrush}" VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>

                <!-- Window Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="−" Width="32" Height="32" Background="Transparent" Foreground="{StaticResource TextSecondaryBrush}" 
                            BorderThickness="0" FontSize="20" Click="MinimizeButton_Click"/>
                    <Button Content="⛶" Width="32" Height="32" Background="Transparent" Foreground="{StaticResource TextSecondaryBrush}" 
                            BorderThickness="0" FontSize="16" Click="MaximizeButton_Click"/>
                    <Button Content="✕" Width="32" Height="32" Background="Transparent" Foreground="{StaticResource ErrorBrush}" 
                            BorderThickness="0" FontSize="16" Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Hero Metrics -->
        <Grid Grid.Row="1" Margin="32,8,32,8" Height="120">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- CPU Card -->
            <Border Grid.Column="0" Style="{StaticResource GlassCard}" Margin="8" x:Name="CpuCard">
                <Border.RenderTransform>
                    <ScaleTransform/>
                </Border.RenderTransform>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- CPU Icon Background -->
                    <Border Grid.Row="0" Background="Transparent" VerticalAlignment="Top" HorizontalAlignment="Right" 
                            Width="48" Height="48" Margin="12">
                        <TextBlock Text="⚡" FontSize="28" Foreground="{StaticResource AccentBrush}" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.3"/>
                    </Border>

                    <!-- CPU Value -->
                    <TextBlock Grid.Row="1" x:Name="CpuValueText" Text="0%" Style="{StaticResource HeroMetric}">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#00D4AA" Offset="0"/>
                                <GradientStop Color="#22C55E" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>

                    <!-- CPU Label -->
                    <TextBlock Grid.Row="2" Text="CPU LOAD" Style="{StaticResource MetricLabel}"/>
                </Grid>
            </Border>

            <!-- GPU Card -->
            <Border Grid.Column="1" Style="{StaticResource GlassCard}" Margin="8" x:Name="GpuCard">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="Transparent" VerticalAlignment="Top" HorizontalAlignment="Right" 
                            Width="48" Height="48" Margin="12">
                        <TextBlock Text="🎮" FontSize="28" Foreground="{StaticResource SecondaryBrush}" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.3"/>
                    </Border>

                    <TextBlock Grid.Row="1" x:Name="GpuValueText" Text="0%" Style="{StaticResource HeroMetric}">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#A855F7" Offset="0"/>
                                <GradientStop Color="#8B5CF6" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>

                    <TextBlock Grid.Row="2" Text="GPU LOAD" Style="{StaticResource MetricLabel}"/>
                </Grid>
            </Border>

            <!-- Memory Card -->
            <Border Grid.Column="2" Style="{StaticResource GlassCard}" Margin="8" x:Name="MemoryCard">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="Transparent" VerticalAlignment="Top" HorizontalAlignment="Right" 
                            Width="48" Height="48" Margin="12">
                        <TextBlock Text="💾" FontSize="28" Foreground="{StaticResource AccentBrush}" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.3"/>
                    </Border>

                    <TextBlock Grid.Row="1" x:Name="MemoryValueText" Text="0%" Style="{StaticResource HeroMetric}">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#06B6D4" Offset="0"/>
                                <GradientStop Color="#0EA5E9" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>

                    <TextBlock Grid.Row="2" Text="MEMORY" Style="{StaticResource MetricLabel}"/>
                </Grid>
            </Border>

            <!-- Temperature Card -->
            <Border Grid.Column="3" Style="{StaticResource GlassCard}" Margin="8" x:Name="TempCard">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="Transparent" VerticalAlignment="Top" HorizontalAlignment="Right" 
                            Width="48" Height="48" Margin="12">
                        <TextBlock Text="🌡️" FontSize="28" Foreground="{StaticResource WarnBrush}" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.3"/>
                    </Border>

                    <TextBlock Grid.Row="1" x:Name="TempValueText" Text="0°C" Style="{StaticResource HeroMetric}">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#F59E0B" Offset="0"/>
                                <GradientStop Color="#F97316" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>

                    <TextBlock Grid.Row="2" Text="TEMP" Style="{StaticResource MetricLabel}"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="2" Margin="32,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- CPU & Cooling -->
            <Border Grid.Column="0" Style="{StaticResource GlassCard}" Margin="8,0">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="CPU &amp; COOLING" FontFamily="Segoe UI Variable" FontSize="16" FontWeight="SemiBold" 
                               Foreground="{StaticResource AccentBrush}" Margin="0,0,0,20"/>

                    <StackPanel Grid.Row="1">
                        <!-- CPU Cores -->
                        <Border Background="{StaticResource CardBrush}" CornerRadius="10" Padding="16" Margin="0,0,0,16">
                            <StackPanel>
                                <Grid Margin="0,0,0,10">
                                                            <TextBlock Text="CPU CORES" FontFamily="Segoe UI Variable" FontSize="13" FontWeight="SemiBold" 
                                           Foreground="{StaticResource AccentBrush}"/>
                                    <TextBlock x:Name="CpuCoreCountText" Text="16 CORES" FontFamily="Segoe UI Variable" FontSize="9" FontWeight="Bold" 
                                               Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Right"/>
                                </Grid>
                                <Grid x:Name="CpuCoresGrid">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Core indicators will be added programmatically -->
                                </Grid>
                                <TextBlock x:Name="CpuCoresText" Text="Loading..." 
                                           FontFamily="Segoe UI Variable" FontSize="11" FontWeight="Medium"
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           TextWrapping="Wrap" LineHeight="15" MaxHeight="50" TextTrimming="CharacterEllipsis" Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- CPU Fans -->
                        <Border Background="{StaticResource CardBrush}" CornerRadius="10" Padding="16">
                            <StackPanel>
                                <Grid Margin="0,0,0,10">
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle Width="8" Height="8" Fill="{StaticResource AccentBrush}" RadiusX="4" RadiusY="4" Margin="0,2,6,0"/>
                                                                <TextBlock Text="CPU FANS" FontFamily="Segoe UI Variable" FontSize="13" FontWeight="SemiBold" 
                                           Foreground="{StaticResource AccentBrush}"/>
                                    </StackPanel>
                                    <TextBlock x:Name="CpuFanStatusText" Text="ACTIVE" FontFamily="Segoe UI Variable" FontSize="9" FontWeight="Bold" 
                                               Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Right"/>
                                </Grid>
                                <ScrollViewer MaxHeight="80" VerticalScrollBarVisibility="Auto">
                                    <TextBlock x:Name="CpuFanText" Text="Loading..." 
                                               FontFamily="Segoe UI Variable" FontSize="12" FontWeight="Medium"
                                               Foreground="{StaticResource TextSecondaryBrush}" 
                                               TextWrapping="Wrap" LineHeight="18"/>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- GPU & Graphics -->
            <Border Grid.Column="1" Style="{StaticResource GlassCard}" Margin="8,0">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="GPU &amp; GRAPHICS" FontFamily="Segoe UI Variable" FontSize="16" FontWeight="SemiBold" 
                               Foreground="{StaticResource SecondaryBrush}" Margin="0,0,0,20"/>

                    <StackPanel Grid.Row="1">
                                                <!-- GPU Details -->
                        <Border Background="{StaticResource CardBrush}" CornerRadius="10" Padding="16" Margin="0,0,0,16">
                            <StackPanel>
                                <Grid Margin="0,0,0,12">
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle Width="8" Height="8" Fill="{StaticResource SecondaryBrush}" RadiusX="4" RadiusY="4" Margin="0,2,6,0"/>
                                        <TextBlock Text="GPU PERFORMANCE" FontFamily="Segoe UI Variable" FontSize="13" FontWeight="SemiBold" 
                                                   Foreground="{StaticResource SecondaryBrush}"/>
                                    </StackPanel>
                                    <TextBlock x:Name="GpuStatusText" Text="ACTIVE" FontFamily="Segoe UI Variable" FontSize="10" FontWeight="Bold" 
                                               Foreground="{StaticResource SecondaryBrush}" HorizontalAlignment="Right"/>
                                </Grid>
                                <!-- GPU Load Bar -->
                                <Border Background="#20FFFFFF" Height="6" CornerRadius="3" Margin="0,0,0,12">
                                    <Border x:Name="GpuBar" Background="{StaticResource SecondaryBrush}" 
                                            HorizontalAlignment="Left" Width="30" Height="6" CornerRadius="3"/>
                                </Border>
                                <TextBlock x:Name="GpuDetailsText" Text="Loading..." 
                                           FontFamily="Segoe UI Variable" FontSize="12" FontWeight="Medium"
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           TextWrapping="Wrap" LineHeight="18"/>
                            </StackPanel>
                        </Border>

                        <!-- System Fans -->
                        <Border Background="{StaticResource CardBrush}" CornerRadius="10" Padding="16">
                            <StackPanel>
                                <Grid Margin="0,0,0,10">
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle Width="8" Height="8" Fill="{StaticResource SecondaryBrush}" RadiusX="4" RadiusY="4" Margin="0,2,6,0"/>
                                                                <TextBlock Text="SYSTEM FANS" FontFamily="Segoe UI Variable" FontSize="13" FontWeight="SemiBold" 
                                           Foreground="{StaticResource SecondaryBrush}"/>
                                    </StackPanel>
                                    <TextBlock x:Name="SystemFanStatusText" Text="ACTIVE" FontFamily="Segoe UI Variable" FontSize="9" FontWeight="Bold" 
                                               Foreground="{StaticResource SecondaryBrush}" HorizontalAlignment="Right"/>
                                </Grid>
                                <ScrollViewer MaxHeight="80" VerticalScrollBarVisibility="Auto">
                                    <TextBlock x:Name="SystemFanText" Text="Loading..." 
                                               FontFamily="Segoe UI Variable" FontSize="12" FontWeight="Medium"
                                               Foreground="{StaticResource TextSecondaryBrush}" 
                                               TextWrapping="Wrap" LineHeight="18"/>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Memory & Storage -->
            <Border Grid.Column="2" Style="{StaticResource GlassCard}" Margin="8,0">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="MEMORY &amp; STORAGE" FontFamily="Segoe UI Variable" FontSize="16" FontWeight="SemiBold" 
                               Foreground="{StaticResource AccentBrush}" Margin="0,0,0,20"/>

                    <StackPanel Grid.Row="1">
                        <!-- Memory Details -->
                        <Border Background="{StaticResource CardBrush}" CornerRadius="8" Padding="12" Margin="0,0,0,12">
                            <StackPanel>
                                <Grid Margin="0,0,0,10">
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle Width="8" Height="8" Fill="{StaticResource AccentBrush}" RadiusX="4" RadiusY="4" Margin="0,2,6,0"/>
                                                                <TextBlock Text="MEMORY USAGE" FontFamily="Segoe UI Variable" FontSize="13" FontWeight="SemiBold" 
                                           Foreground="{StaticResource AccentBrush}"/>
                                    </StackPanel>
                                    <TextBlock x:Name="MemoryStatusText" Text="NORMAL" FontFamily="Segoe UI Variable" FontSize="9" FontWeight="Bold" 
                                               Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Right"/>
                                </Grid>
                                <StackPanel>
                                    <!-- Memory Bar -->
                                    <Border Background="#20FFFFFF" Height="4" CornerRadius="2" Margin="0,0,0,8">
                                        <Border x:Name="MemoryBar" Background="{StaticResource AccentBrush}" 
                                                HorizontalAlignment="Left" Width="50" Height="4" CornerRadius="2"/>
                                    </Border>
                                    <TextBlock x:Name="MemoryDetailsText" Text="Loading..." 
                                               FontFamily="Segoe UI Variable" FontSize="12" FontWeight="Medium"
                                               Foreground="{StaticResource TextSecondaryBrush}" 
                                               TextWrapping="Wrap" LineHeight="18"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Thermal Sensors -->
                        <Border Background="{StaticResource CardBrush}" CornerRadius="8" Padding="12">
                            <StackPanel>
                                <Grid Margin="0,0,0,10">
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle Width="8" Height="8" Fill="{StaticResource WarnBrush}" RadiusX="4" RadiusY="4" Margin="0,2,6,0"/>
                                                                <TextBlock Text="THERMAL SENSORS" FontFamily="Segoe UI Variable" FontSize="13" FontWeight="SemiBold" 
                                           Foreground="{StaticResource WarnBrush}"/>
                                    </StackPanel>
                                    <TextBlock x:Name="ThermalStatusText" Text="NORMAL" FontFamily="Segoe UI Variable" FontSize="9" FontWeight="Bold" 
                                               Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Right"/>
                                </Grid>
                                <!-- Temperature Overview -->
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="CPU" FontFamily="Segoe UI Variable" FontSize="9" FontWeight="Medium" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                        <TextBlock x:Name="CpuTempText" Text="57°C" FontFamily="Segoe UI Variable" FontSize="14" FontWeight="Bold" 
                                                   Foreground="{StaticResource WarnBrush}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="GPU" FontFamily="Segoe UI Variable" FontSize="9" FontWeight="Medium" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                        <TextBlock x:Name="GpuTempText" Text="45°C" FontFamily="Segoe UI Variable" FontSize="14" FontWeight="Bold" 
                                                   Foreground="{StaticResource AccentBrush}"/>
                                    </StackPanel>
                                </Grid>
                                <ScrollViewer MaxHeight="100" VerticalScrollBarVisibility="Auto">
                                    <TextBlock x:Name="TemperatureDetailsText" Text="Loading..." 
                                               FontFamily="Segoe UI Variable" FontSize="11" FontWeight="Medium"
                                               Foreground="{StaticResource TextSecondaryBrush}" 
                                               TextWrapping="Wrap" LineHeight="16"/>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- System Overview -->
            <Border Grid.Column="3" Style="{StaticResource GlassCard}" Margin="8,0">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="SYSTEM OVERVIEW" FontFamily="Segoe UI Variable" FontSize="16" FontWeight="SemiBold" 
                               Foreground="{StaticResource AccentBrush}" Margin="0,0,0,20"/>

                    <!-- System Health Indicator -->
                    <Border Grid.Row="1" Background="{StaticResource CardBrush}" CornerRadius="16" Padding="20" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="SYSTEM STATUS" FontFamily="Segoe UI Variable" FontSize="12" FontWeight="Medium" 
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock x:Name="SystemHealthText" Text="OPTIMAL" FontFamily="Segoe UI Variable" FontSize="24" FontWeight="Bold" 
                                           Foreground="{StaticResource AccentBrush}" Margin="0,4,0,0"/>
                            </StackPanel>

                            <Ellipse Grid.Column="1" Width="40" Height="40" x:Name="HealthIndicator">
                                <Ellipse.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#CC00D4AA" Offset="0"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                                <Ellipse.RenderTransform>
                                    <ScaleTransform/>
                                </Ellipse.RenderTransform>
                                <Ellipse.Triggers>
                                    <EventTrigger RoutedEvent="Ellipse.Loaded">
                                        <BeginStoryboard Storyboard="{StaticResource PulseAnimation}"/>
                                    </EventTrigger>
                                </Ellipse.Triggers>
                            </Ellipse>
                        </Grid>
                    </Border>

                    <!-- System Information -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="HARDWARE INFO" FontFamily="Segoe UI Variable" FontSize="14" FontWeight="Medium" 
                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,12"/>
                            
                            <TextBlock x:Name="SystemInfoText" Text="Loading system information..." 
                                       FontFamily="Segoe UI Variable" FontSize="11" 
                                       Foreground="{StaticResource TextMutedBrush}" 
                                       TextWrapping="Wrap" LineHeight="16"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="3" Background="Transparent">
            <Grid Margin="32,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" x:Name="StatusText" Text="System Monitor initializing..." 
                           FontFamily="Segoe UI Variable" FontSize="12" 
                           Foreground="{StaticResource TextMutedBrush}" 
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1" x:Name="UpdateTimeText" Text="Last update: --:--:--" 
                           FontFamily="Segoe UI Variable" FontSize="12" 
                           Foreground="{StaticResource TextMutedBrush}" 
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window> 